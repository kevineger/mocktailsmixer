{
    "manifest": {
        "displayName": "Blinky light",
        "invocationName": "Blinky light",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.example.actions.BlinkLight",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.BlinkLight",
                "parameters": [
                    {
                        "name": "number",
                        "type": "SchemaOrg_Number"
                    },
                    {
                        "name": "speed",
                        "type": "Speed"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "blink ($Speed:speed)? $SchemaOrg_Number:number times",
                        "blink $SchemaOrg_Number:number times ($Speed:speed)?"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Blinking $number times"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.BlinkLight",
                                    "params": {
                                        "speed": "$speed",
                                        "number": "$number"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.mocktails.actions.MakeDrink",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.mocktails.intents.MakeDrink",
                "parameters": [
                    {
                        "name": "drink",
                        "type": "Drink"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "make me a $Drink:drink drink",
                        "hey dude, make me a $Drink:drink drink"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Making you a $drink"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.mocktails.commands.MakeDrink",
                                    "params": {
                                        "drink": "$drink"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "types": [
        {
            "name": "$Drink",
            "entities": [
                {
                    "key": "CRAZY_DRINK",
                    "synonyms": [
                        "crazy bevy",
                        "crazy",
                        "bevy",
                        "bobop"
                    ]
                },
                {
                    "key": "SUNSET_COOLER",
                    "synonyms": [
                        "sunset cooler",
                        "sunset",
                        "cooler"
                    ]
                },
                {
                    "key": "ORANGE_BLAST",
                    "synonyms": [
                        "orange blast",
                        "orange",
                        "blast"
                    ]
                },
                {
                    "key": "CHERRY_BOMB",
                    "synonyms": [
                        "cherry bomb",
                        "cherry",
                        "bomb"
                    ]
                }
            ]
        }
    ]
}